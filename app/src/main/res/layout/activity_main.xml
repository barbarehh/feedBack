<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#83002D">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center|bottom"
        android:text="FeedBack"
        android:textColor="#E46CF8"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1. გისარგებლიათ თუ არა ჩვენი სერვისებით?"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginVertical="15dp"
            android:weightSum="2">

            <CheckBox
                android:id="@+id/chek1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="კი"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/chek2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="არა"
                android:textColor="@color/white" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2. თუ გისარგებლიათ ჩვენი სერვისებით, შეაფასეთ მომსახურეობის ხარისხი"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginVertical="15dp"
            android:weightSum="2">
            <EditText
                android:id="@+id/saxeli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="სახელი"
                android:textColor="@color/white"
                android:backgroundTint="#7C6060"
                android:textColorHint="@color/white"/>
            <EditText
                android:id="@+id/gvari"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="გვარი"
                android:textColor="@color/white"
                android:backgroundTint="#7C6060"
                android:textColorHint="@color/white"/>

        </LinearLayout>
        <EditText
            android:id="@+id/teqsti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="ტექსტი"
            android:textColor="@color/white"
            android:backgroundTint="#7C6060"
            android:textColorHint="@color/white"/>
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginVertical="15dp"
            android:text="     გაგზავნა     "
            android:backgroundTint="#E46CF8"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>